<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:orientation="vertical" android:background="@drawable/blue">
	<LinearLayout android:layout_width="fill_parent"
		android:layout_marginBottom="13px" android:layout_marginLeft="13px"
		android:layout_marginRight="13px" android:layout_marginTop="13px"
		android:layout_height="fill_parent" android:orientation="vertical"
		android:background="@drawable/blue_in">
		<TextView android:text="@+id/hkName" android:id="@+id/hkName"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_marginBottom="13dip" android:layout_marginLeft="13dip"
			android:layout_marginTop="13dip"></TextView>
		<TextView android:text="@+id/fightno" android:id="@+id/fightno"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_alignParentRight="true" android:layout_marginLeft="13dip"
			android:layout_marginBottom="13dip"></TextView>
		<LinearLayout android:orientation="horizontal"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_marginBottom="13dip" android:layout_marginLeft="13dip">
			<TextView android:text="出发:" android:id="@+id/TextView01"
				android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
			<LinearLayout android:layout_width="wrap_content"
				android:orientation="horizontal" android:layout_height="wrap_content">
				<TextView android:text="@+id/stime" android:id="@+id/stime"
					android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
				<TextView android:text="@+id/scAirdrome" android:id="@+id/scAirdrome"
					android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
			</LinearLayout>
		</LinearLayout>
		<LinearLayout android:orientation="horizontal"
			android:layout_alignParentRight="true" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:paddingLeft="13dip"
			android:paddingBottom="13dip">
			<TextView android:text="到达:" android:id="@+id/TextView02"
				android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
			<LinearLayout android:layout_width="wrap_content"
				android:orientation="horizontal" android:layout_height="wrap_content">
				<TextView android:text="@+id/etime" android:id="@+id/etime"
					android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
				<TextView android:text="@+id/ecAirdrome" android:id="@+id/ecAirdrome"
					android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
			</LinearLayout>
		</LinearLayout>
		<ScrollView android:id="@+id/ScrollView01"
			android:layout_weight="1" android:layout_height="fill_parent"
			android:layout_width="fill_parent" android:scrollbars="horizontal|vertical">
			<HorizontalScrollView android:id="@+id/HorizontalScrollView01"
				android:layout_height="fill_parent" android:layout_width="fill_parent">
				<LinearLayout android:id="@+id/LinearLayout02"
					android:layout_width="580dp" android:orientation="vertical"
					android:layout_height="200dp">
					<LinearLayout android:id="@+id/LinearLayout03"
						android:layout_width="400dp" android:orientation="horizontal"
						android:layout_height="wrap_content">
						<TextView android:text="座位等级" android:id="@+id/level"
							android:layout_width="60dp" android:layout_height="wrap_content"></TextView>
						<TextView android:text="票数量" android:id="@+id/count"
							android:layout_width="50dp" android:layout_height="wrap_content"></TextView>
						<TextView android:text="等级码" android:id="@+id/count"
							android:layout_width="50dp" android:layout_height="wrap_content"></TextView>
						<TextView android:text="建设费" android:id="@+id/count"
							android:layout_width="50dp" android:layout_height="wrap_content"></TextView>
						<TextView android:text="燃油费" android:id="@+id/count"
							android:layout_width="50dp" android:layout_height="wrap_content"></TextView>
						<TextView android:text="电子票" android:id="@+id/count"
							android:layout_width="50dp" android:layout_height="wrap_content"></TextView>
						<TextView android:text="折扣" android:id="@+id/count"
							android:layout_width="50dp" android:layout_height="wrap_content"></TextView>
						<TextView android:text="价格" android:id="@+id/price"
							android:layout_width="50dp" android:layout_height="wrap_content"></TextView>
					</LinearLayout>
					<ListView android:id="@+id/seatList" android:layout_width="wrap_content"
						android:layout_marginLeft="13dip" android:layout_marginRight="13dip"
						android:layout_height="wrap_content" android:cacheColorHint="#00000000"></ListView>
				</LinearLayout>
			</HorizontalScrollView>
		</ScrollView>
	</LinearLayout>
</LinearLayout>
