<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:background="@drawable/blue">
	<AbsoluteLayout android:orientation="horizontal"
		android:layout_height="wrap_content" android:layout_width="fill_parent">
		<ImageView android:layout_x="12dip" android:id="@+id/ImageView01"
			android:layout_y="2dip" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:src="@drawable/logo"></ImageView>
		<TextView android:text="手机游天下" android:layout_y="38dip"
			android:layout_height="wrap_content" android:layout_x="159dip"
			android:layout_width="wrap_content" android:id="@+id/TextView01"
			android:textSize="25dip"></TextView>
		<TextView android:text="吃喝玩乐行" android:layout_y="68dip"
			android:layout_height="wrap_content" android:layout_x="159dip"
			android:layout_width="wrap_content" android:id="@+id/TextView01"
			android:textSize="25dip"></TextView> 
	</AbsoluteLayout>
	<RelativeLayout android:layout_width="fill_parent"
		android:layout_height="fill_parent">
		<LinearLayout android:layout_width="fill_parent"
			android:orientation="vertical" android:layout_height="wrap_content"
			android:layout_centerVertical="true">
			<LinearLayout android:layout_x="0px"
				android:orientation="vertical" android:layout_y="130px"
				android:layout_width="fill_parent" android:layout_height="wrap_content">
				<LinearLayout android:orientation="horizontal"
					android:layout_width="fill_parent" android:layout_height="fill_parent"
					android:layout_marginBottom="13dip">
					<RelativeLayout android:layout_weight="1"
						android:layout_width="wrap_content" android:layout_height="wrap_content">
						<Button android:id="@+id/ticket" android:layout_width="100dip"
							android:layout_height="100dip" android:text="机票"
							android:layout_centerHorizontal="true"></Button>
					</RelativeLayout>
					<RelativeLayout android:layout_weight="1"
						android:layout_width="wrap_content" android:layout_height="wrap_content">
						<Button android:id="@+id/hotel" android:layout_width="100dip"
							android:layout_height="100dip" android:text="酒店"
							android:layout_centerHorizontal="true"></Button>
					</RelativeLayout>
					<RelativeLayout android:layout_weight="1"
						android:layout_width="wrap_content" android:layout_height="wrap_content">
						<Button android:id="@+id/travel" android:layout_width="100dip"
							android:layout_height="100dip" android:text="旅游"
							android:layout_centerHorizontal="true"></Button>
					</RelativeLayout>
				</LinearLayout>
				<LinearLayout android:orientation="horizontal"
					android:layout_width="fill_parent" android:layout_height="fill_parent">
					<RelativeLayout android:layout_weight="1"
						android:layout_width="wrap_content" android:layout_height="wrap_content">
						<Button android:id="@+id/train" android:layout_width="100dip"
							android:layout_height="100dip" android:text="火车票务"
							android:layout_centerHorizontal="true"></Button>
					</RelativeLayout>
					<RelativeLayout android:layout_weight="1"
						android:layout_width="wrap_content" android:layout_height="wrap_content">
						<Button android:id="@+id/bus" android:layout_width="100dip"
							android:layout_height="100dip" android:text="公交"
							android:layout_centerHorizontal="true"></Button>
					</RelativeLayout>
					<RelativeLayout android:layout_weight="1"
						android:layout_width="wrap_content" android:layout_height="wrap_content">
						<Button android:id="@+id/config" android:layout_width="100dip"
							android:layout_height="100dip" android:text="系统设置"
							android:layout_centerHorizontal="true"></Button>
					</RelativeLayout>
				</LinearLayout>
			</LinearLayout>
		</LinearLayout>
	</RelativeLayout>
</LinearLayout>
